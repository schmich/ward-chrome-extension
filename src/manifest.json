{
  "name": "Ward",
  "short_name": "Ward",
  "description": "Password Manager",
  "version": "1",
  "manifest_version": 2,
  "author": "Chris Schmich <schmch@gmail.com>",
  "homepage_url": "https://github.com/schmich/ward",
  "offline_enabled": true,
  "permissions": [
    "nativeMessaging",
    "tabs"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "inject.js"
      ],
      "css": [
        "inject.css"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "autofill.svg"
  ],
  "minimum_chrome_version": "64",
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
